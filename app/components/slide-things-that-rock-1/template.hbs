<div class="flex-center padded" style="width: 100%">
  {{#liquid-spacer growDuration=250 class="max-width"}}
    <h1>
      List of Things that Rock:
    </h1>

    {{#with "1. Zero boilerplate" as |header0|}}
      {{#hidden-at-first index=0}}
        <h4><strike>{{header0}}</strike></h4>
        {{#with "2. Zero cost to switch between strategies" as |header1|}}
          {{#hidden-at-first index=1}}
            <h4><strike>{{{header1}}}</strike></h4>
            {{#with "3. When all else fails, you can always fall back to canceling tasks manually" as |header2|}}
              {{#hidden-at-first index=2}}
                <h4><strike>{{header2}}</strike></h4>
              {{else}}
                <h4>{{header2}}</h4>
              {{/hidden-at-first}}
            {{/with}}
          {{else}}
            <h4>{{{header1}}}</h4>
          {{/hidden-at-first}}
        {{/with}}
      {{else}}
        <h4>{{header0}}</h4>
      {{/hidden-at-first}}
    {{/with}}
  {{/liquid-spacer}}
</div>

